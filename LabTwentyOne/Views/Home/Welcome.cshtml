@*@{ViewBag.Title = "UserDetails";}
@{ ViewBag.Title = "ListItems";}*@

<div class="RegBox">
    <div class="CenterRegBox">

        @if (ViewBag.CurrentUser != null)
        {

            <h2>Welcome, @ViewBag.CurrentUser.FirstName @ViewBag.CurrentUser.LastName!</h2>

            <h2>List Items</h2>

            <table class="table">
                <tr>
                    <th>Item</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th></th>
                </tr>
                @foreach (var item in ViewBag.ItemsList)
                {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td><a href="/Home/AddItem?itemName=@item.ItemName">Add Itemt</a></td>
                    </tr>
                }
            </table>


            @Html.ActionLink("Logout", "LogOut", "Home")
        }
        else
        {
            <h2>This page is not available.</h2>
        }
    </div>
</div>